{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <a class="btn btn-primary" href="{{ path('user_new') }}">Ajouter un utilisateur</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Mot de passe</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.role }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('user_show', {'id': user.id}) }}">Détail</a>
                    <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Utilisateurs non enregistrés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
